{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "~/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
